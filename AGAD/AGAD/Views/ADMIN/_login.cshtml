@model AGAD.Models.USER
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AGAD YÖNETİM PANEL</title>
    <meta name="description" content="doğal afet acil durum bilgilendirici" />
    <meta name="keywords" content="doğal afet acil durum bilgilendirme" />
    <meta name="author" content="murat erkan" />
    <link rel="icon" type="image/ico" href="@Url.Content("~/Content/Images/afadlogo1.ico")" />
    @Styles.Render("~/Content/bootstrap.min.css")

    @Scripts.Render("~/Scripts/jquery.min.js")
    <style>
        .validation-summary-errors > ul {
            list-style:none;
        }
    </style>
</head>
<body>
    <div class="container" style="margin-top:15%">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
            <div class="col-xs-6" style="line-height:150px">
                <img src="@Url.Content("~/Content/Images/afadlogo.png")" />
            </div>
            <div class="col-xs-6">
                <form action="/admin" method="post" class="login" id="login" role="form">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.EMAIL), autocomplete = "off" })
                        <div style="text-align:center">
                            <label for="EMAIL" style="color:red" class="error">@Html.ValidationMessageFor(n => n.EMAIL)</label>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.PasswordFor(m => m.PASS, new { @class = "form-control", })
                        <div style="text-align:center"><label for="PASS" style="color:red" class="error">@Html.ValidationMessageFor(n => n.PASS)</label></div>
                    </div>
                    

                    <div style="text-align:center">
                        <button type="button" class="btn btn-default" id="loginBtn">Giriş Yap</button>
                    </div>
                    @if (ViewBag.error)
                    {
                        <fieldset class="alert-danger loginAlert" style="margin-top: 2%; padding-top: 4%;">
                            @Html.ValidationSummary()
                        </fieldset>
                    }
                </form>
            </div>
        </div>
        <div class="col-xs-3"></div>
    </div>
    <
    
   

    <script>
        $(function () {

            $("#login").validate({
                rules: {
                    EMAIL: {
                        required: true,
                        email: true
                    },
                    PASS: {
                        required: true,
                        minlength: 6
                    }
                },
                messages: {
                    EMAIL: {
                        required: "Mail Adresinizi Giriniz",
                        email: "Geçerli Mail Adresi Giriniz"
                    },
                    PASS: {
                        required: "Şifrenizi Giriniz",
                        minlength: "En Az 6 Karakter Olmalı"
                    }
                }

            });
            $('#loginBtn').on('click', function () {
                debugger
                if($('#login').valid())
                {
                    $('#login').submit();
                }
            });
            setTimeout(function () {
                $('#loginAlert').hide();
            }, 4000);
        });
    </script>
    @Scripts.Render("~/Scripts/jquery.easing.1.3.js")
    @Scripts.Render("~/Scripts/jquery-ui.js")
    @Scripts.Render("~/Scripts/prefixfree.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
   
</body>
</html>





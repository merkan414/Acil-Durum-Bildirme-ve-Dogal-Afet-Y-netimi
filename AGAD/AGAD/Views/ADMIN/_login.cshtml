@{
    Layout = null;
}
@model AGAD.Models.USER
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_AdminLayoutTemplate</title>

    @Styles.Render("~/Content/login.css")
    @Scripts.Render("~/Scripts/jquery.min.js")
</head>
<body>
    <div class="body"></div>
    <div class="grad"></div>
    <div class="header">
        <img src="@Url.Content("~/Content/Images/afadlogo.png")" />
    </div>
    <br>
    <form action="/admin" method="post" class="login" id="login">
        @Html.AntiForgeryToken()
        <div>@Html.TextBoxFor(m => m.EMAIL, new { placeholder = Html.DisplayNameFor(n => n.EMAIL), autocomplete = "off" })</div>
        <div style="text-align:center"><label for="EMAIL" style="color:red" class="error">@Html.ValidationMessageFor(n => n.EMAIL)</label></div>
        <div>@Html.PasswordFor(m => m.PASS)</div>
        <div style="text-align:center"><label for="PASS" style="color:red" class="error">@Html.ValidationMessageFor(n => n.PASS)</label></div>
        
        <input type="button" value="Giriş Yap" id="loginBtn">
        @if (ViewBag.error)
        {
            <fieldset class="alert-danger loginAlert" style="margin-bottom:2%">
                @Html.ValidationSummary()
            </fieldset>
        }
    </form>

    <script>
        $(function () {

            $("#login").validate({
                rules: {
                    EMAIL: {
                        required: true,
                        email: true
                    },
                    PASS: {
                        required: true,
                        minlength: 6
                    }
                },
                messages: {
                    EMAIL: {
                        required: "Mail Adresinizi Giriniz",
                        email: "Geçerli Mail Adresi Giriniz"
                    },
                    PASS: {
                        required: "Şifrenizi Giriniz",
                        minlength: "En Az 6 Karakter Olmalı"
                    }
                }

            });
            $('#loginBtn').on('click', function () {
                debugger
                if($('#login').valid())
                {
                    $('#login').submit();
                }
            });
            setTimeout(function () {
                $('#loginAlert').hide();
            }, 4000);
        });
    </script>
    @Scripts.Render("~/Scripts/jquery.easing.1.3.js")
    @Scripts.Render("~/Scripts/jquery-ui.js")
    @Scripts.Render("~/Scripts/prefixfree.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
   
</body>
</html>




